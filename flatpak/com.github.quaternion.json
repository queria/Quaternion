
{
    "id": "com.github.quaternion",
    "rename-icon": "quaternion",
    "rename-desktop-file": "quaternion.desktop",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.2",
    "sdk": "org.kde.Sdk",
    "command": "quaternion",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "quaternion",
            "buildsystem": "cmake-ninja",
	    "build-options": { "env": { "BUILD_WITH_QT6": "1" } },
	    "config-opts": ["-DBUILD_WITH_QT6=1"],
            "sources": [
                {
                    "type": "dir",
                    "path": "../"
                }
            ]
        }
    ]
}

